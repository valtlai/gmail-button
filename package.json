{
	"private": true,
	"license": "ISC",
	"author": "Valtteri Laitinen <dev@valtlai.fi>",
	"repository": "valtlai/gmail-button",
	"scripts": {
		"test": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"prepare": "npx simple-git-hooks"
	},
	"devDependencies": {
		"eslint": "^8.4.1",
		"lint-staged": "^12.1.2",
		"prettier": "^2.5.1",
		"simple-git-hooks": "^2.7.0"
	},
	"eslintConfig": {
		"root": true,
		"extends": "eslint:recommended",
		"reportUnusedDisableDirectives": true,
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"env": {
			"es2021": true,
			"webextensions": true
		}
	},
	"prettier": {
		"singleQuote": true,
		"quoteProps": "consistent",
		"trailingComma": "all"
	},
	"lint-staged": {
		"*.js": "eslint",
		"*": "prettier --write --ignore-unknown"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	}
}

{
	"private": true,
	"license": "MIT",
	"author": "Valtteri Laitinen <dev@valtlai.fi>",
	"repository": "valtlai/gmail-button",
	"scripts": {
		"test": "eslint . && prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"eslint": "^8.1.0",
		"prettier": "^2.4.1",
		"simple-git-hooks": "^2.7.0"
	},
	"eslintConfig": {
		"root": true,
		"extends": "eslint:recommended",
		"env": {
			"es2021": true,
			"webextensions": true
		},
		"parserOptions": {
			"ecmaVersion": "latest"
		}
	},
	"prettier": {
		"singleQuote": true,
		"quoteProps": "consistent",
		"trailingComma": "all"
	},
	"simple-git-hooks": {
		"pre-commit": "npm run test"
	}
}
